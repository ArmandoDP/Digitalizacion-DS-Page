---
// Feature Cards grid Section
// ------------
// Description: A grid of cards with feature information in a 4 column layout.

// Components
// - Layout
import Section from '../../ui/Section.astro'
import Row from '../../ui/Row.astro'
import Col from '../../ui/Col.astro'
// - UI
import Card from '../../ui/cards/FeatureCard.astro'

// Content
// - Cards
import feature01 from '../../../assets/cards/feature-01.svg'
import feature02 from '../../../assets/cards/feature-02.svg'
import feature03 from '../../../assets/cards/feature-03.svg'
import feature04 from '../../../assets/cards/feature-04.svg'
import feature05 from '../../../assets/cards/feature-05.svg'

import probelmsWrapper from '../../../assets/highlights/problems-wrapper-1.png'
import imgSection from '../../../assets/highlights/okidoki.jpg'

//bullets
import bullet01 from '../../../assets/highlights/bullet1.png'
import bullet02 from '../../../assets/highlights/bullet2.png'
import bullet03 from '../../../assets/highlights/bullet3.png'
import bullet04 from '../../../assets/highlights/bullet4.png'
import bullet05 from '../../../assets/highlights/bullet5.png'
import bullet06 from '../../../assets/highlights/bullet6.png'
import Button from '../../ui/Button.astro'
---

