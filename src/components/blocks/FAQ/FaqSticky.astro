---
// FAQ with sticky sidebar
// ------------
// Description: an FAQ section with the title as a sticky sidebar.

// Components
// - UI
import FaqSection from '../basic/StickyFAQ.astro'
import FAQ from '../../ui/Accordion.astro'
import Card from '../../ui/cards/partials/Card.astro'

// Props
type Props = {
	title?: string
	text?: string
	data: any
	type?: 'left' | 'right'
	classes?: string
}
const { title, text, data, type = 'left', classes } = Astro.props
---

<FaqSection classes={classes} type={type}>
	<Card classes="divide-y divide-black/20 dark:divide-white/30">
		{data.map((faq: any) => <FAQ title={faq.question} text={faq.reply} open={faq.open} />)}
	</Card>
</FaqSection>
